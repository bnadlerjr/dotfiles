" .vimrc
" Bob Nadler, Jr.
set autoread
set background=dark
set backspace=indent,eol,start
set backup
set backupdir=~/tmp/
set cursorline
set expandtab
set hlsearch
set nocompatible
set number
set ruler
set runtimepath+=./vim/after
set showmatch
set showmode
set showcmd
set sw=4 sts=4 ts=4
colorscheme desert
filetype plugin on
syntax on
