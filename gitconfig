[alias]
    aa = add --all
    br = branch
    ci = commit
    co = checkout
    di = diff
    ff = merge --ff-only
    ir = !git rebase -i origin/master
    lg = log --graph --abbrev-commit --date=relative
    noff = merge --no-ff
    pom = push origin master
    pullff = pull --ff-only
    st = status
    staged = diff --cached
    up = !git fetch origin && git rebase origin/master
