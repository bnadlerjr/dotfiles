[github]
    user = bnadlerjr
    token = !sh -c 'cat ~/.github_token'
[core]
    autocrlf = false
    excludesfile = ~/.gitignore_global
[color]
    ui = auto
[alias]
    a  = add
    aa = add --all
    br = branch
    ca = commit -v -a
    cane = commit --amend --no-edit
    ci = commit -v
    co = checkout
    cob = checkout -b
    conflicted = "!vim +Conflicted"
    di = diff
    ff = merge --ff-only
    glog = log -E -i --grep
    lg = log --graph --abbrev-commit --date=relative
    mup = "!git checkout master && git pull && git checkout -"
    mupr = "!git checkout master && git pull && git checkout - && git rebase master"
    olog = log --oneline --
    pom = push origin master
    pr = "!hub pull-request -o"
    pushf = push --force-with-lease
    st = status
    uncommit = reset --soft HEAD^
[fetch]
    prune = true
[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
    tool = vimdiff
[push]
    default = simple
[rebase]
    autosquash = true
[rerere]
    enabled = true
[heroku]
    account = personal
[pull]
    rebase = true
[init]
    defaultBranch = main
[hub]
